{
  "redirects": [
    {
      "source": "/:id([0-9a-zA-Z]{6})",
      "destination": "https://platform.scala.vet/:id",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/pricing",
      "destination": "/pricing.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}